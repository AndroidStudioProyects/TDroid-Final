<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_teal_200</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">monospace</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >5pt</item>
        <item name="android:background">#70ff106d</item>
        <item name="android:shadowColor" >#70ff106d</item>
    </style>

    <style name="EstiloBoton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_1</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="StyleEditText">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
    </style>

    <style name="StyleTextView">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:background">@drawable/selector_textview</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleTextViewSwIn">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLength">10</item>
        <item name="android:background">@drawable/selector_textview</item>


    </style>
    
    <style name="StyleSpinner">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>



    </style>


</resources>
